.container
  .page-header
    .pull-right
      = link_to 'New User', new_user_path, class: "btn btn-info"
    %h3 Users
  %table.table
    %thead
      %tr
        %th Name
        %th Email
    - @user.each do |user|
      %tr
        %td
          = link_to user.firstname + ' ' + user.lastname , user_path(user)
        %td
          = mail_to user.email
        %td.text-right
          = link_to 'Edit', edit_user_path(user)
