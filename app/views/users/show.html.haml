.container
  .page-header
    .pull-right
      -if current_user.id == @user.id || current_user.admin
        = link_to 'Edit', edit_user_path(@user), class:"btn btn-info"
    %div
      %h1= @user.first_name + ' ' + @user.last_name
  %dl.dl-horizontal
    %dt
      First Name:
      %dd
        = @user.first_name
    %dt
      Last Name:
      %dd= @user.last_name
    %dt
      Email:
      %dd= mail_to @user.email
    -if current_user.tracker_token.present?
      %dt
        Pivotal Tracker Token:
        %dd= current_user.display_token
