.container
  .page-header
    .pull-right
      = link_to 'Edit', edit_project_path(@project), class: "btn btn-primary"
      = link_to 'Delete', project_path(@project), class: "btn btn-danger", method: :delete
    %h1
      = @project.name
  %ol.breadcrumb
    %li= link_to 'Projects', projects_path
    %li= @project.name
  = link_to pluralize((@project.tasks.count),'task'), project_tasks_path(@project)
  %br= link_to pluralize((@project.memberships.count), 'member'), project_memberships_path(@project)
