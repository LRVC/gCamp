.container
  .page-header
    %h1 Edit Project
    - @project.errors.any?
      - if @project.errors.full_messages.each do |msg|
        .alert.alert-danger
          %h1 #{pluralize((@project.errors.size),'error')} prohibited this form from being saved:
          %ul
            %li= msg
  = render 'form'
