    <h1>Frequently Asked Questions</h1>
  </div>

  <ul>

      <% @faq_array_var.each do |position| %>
        <li><%= link_to "#{position[:question]}", faq_path(@faq, anchor: "#{position[:slug]}") %>
      <%end%>

  </ul>

  <% @faq_array_var.each do |position| %>

          <h3><%= position[:question] %></h3></br>
              <%= position[:answer] %></br></br>
