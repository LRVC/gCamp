<div class= "container">

  <div class="page-header">
    <div class="pull-right">
      <%= link_to 'New Task', new_task_path, class: "btn btn-info" %>
    </div>
    <h3>Tasks</h3>
  </div>



  <% @task.each do |task| %>

    <table class= "table">
      <thead>
        <th>Description</th>
      </thead>
        <tr>
            <td><%= link_to task.description, task_path(task) %>
              <div class= "pull-right">
                <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
                <%= link_to 'Delete', task_path(task), method: :delete, class: "btn btn-danger" %>
              </div>
            </td>
        </tr>
    </table>

  <% end %>

  <%= link_to 'New Task', new_task_path %>


</div>
