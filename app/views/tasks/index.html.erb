<div class= "container">

  <div class="page-header">
    <div class="pull-right">
      <%= link_to 'New Task', new_task_path, class: "btn btn-info" %>
    </div>
    <h3>Tasks</h3>
  </div>



  <table class= "table">
    <thead>
      <tr>
        <th> Description </th>
        <th> Due Date </th>
      </tr>
    </thead>

    <% @task.each do |task| %>

    <tr>
      <% if task.completed %>

      <td>
          <strike><%= link_to task.description, task_path(task) %></strike>
      </td>

      <% else %>
        <td>
          <%= link_to task.description, task_path(task) %>
        </td>
      <% end %>

      <% if task.due_date %>
        <td> <%= task.due_date.strftime("%m%d%y")%> </td>
      <% end %>

      <td class="pull-right">
        <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
        <%= link_to 'Delete', task_path(task), method: :delete, class: "btn btn-danger" %>
      </td>

    </tr>

    <% end %>
    
  </table>

</div>
