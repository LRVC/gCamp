.container
  .page-header
    .pull-right
      = link_to 'New Task', new_project_task_path, class: "btn btn-info"
    %h1 Tasks
  %table.table
    %thead
      %th Description
      %th Due On
    %tbody
      - @project.tasks.each do |task|
        %tr
          %td
            - if task.completed
              %strike= link_to task.description, project_tasks_path(task)
            - else
              = link_to task.description, project_tasks_path(task)
          %td
            - if task.due_date
              = task.due_date.strftime("%m/%d/%y")
          %td
            .text-right
              = link_to 'Edit', edit_project_task_path(@project, task), class: "btn btn-info"
              = link_to 'Delete', project_task_path(@project, task), method: :delete, class: "btn btn-danger"
