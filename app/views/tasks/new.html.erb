<div class="container">

  <%= form_for(@task, html: {class: "form-horizontal"}) do |f| %>

    <div class="form-group">
      <%= link_to 'Tasks', tasks_path %> > New task
    </div>

    <div class="form-group">
      <div class="col-sm-2 control-label">
        <p><%= f.label :description %><p>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :description %>
      </div>
      <div class="col-sm-10">
        <br>
        <%= f.submit "Create Task", class: "btn btn-primary" %>
        <%= link_to 'Back', tasks_path, class: "btn btn-default" %>
      </div>
    </div>

  <% end %>



</div>
