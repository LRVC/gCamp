.container
  .page-header
    .pull-right
      = link_to 'Edit', edit_task_path(@task), class:"btn btn-info"
    - if @task.completed
      %h1
        %strike= @task.description
    - else
      %h1
        = @task.description
        %h1
  .row
    .col-sm-12
      %ol.breadcrumb
        %li= link_to 'Tasks', tasks_path
        %li= @task.description
  %div
    %strong Due On:
    = @task.due_date.strftime("%m/%d/%y")
