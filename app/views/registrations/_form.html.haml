.container
  .well.col-md-6.col-md-offset-3
    .page-header
      %h1 Sign Up for gCamp!
    = form_for(@user, url: sign_up_path, html: {class: "form-horizontal"}) do |f|
      .form-group
        .col-sm-offset-2.col-sm-8
          = render partial: 'shared/errors', locals: { error: @user}
      .form-group
        %label.control-label First Name
        = f.text_field :first_name, class: "form-control"
      .form-group
        %label.control-label Last Name
        = f.text_field :last_name, class: "form-control"
      .form-group
        %label.control-label{:for => "inputEmail3"} Email
        = f.email_field :email, class: "form-control"
      .form-group
        %label.control-label Password
        = f.password_field :password, class: "form-control"
      .form-group
        %label.control-label Password Confirmation
        = f.password_field :password_confirmation, class: "form-control"
      .form-group
        = f.submit 'Sign Up', class: "btn btn-primary"
